    <div class="header">
        <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn"><i class="fa fa-bars fa-2x" aria-hidden="true"></i></button>
            <div id="myDropdown" class="dropdown-content">
                <a href="/home"><button class="dropMenu__btn"> Главная</button></a>
